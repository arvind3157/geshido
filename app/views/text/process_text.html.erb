<div class="container">
  <%= form_tag '/', method: :get, class: 'form-group' do %>
    <div class="form-group">
      <%= label_tag :input_text, 'Enter text:', class: 'control-label' %>
      <%= text_area_tag :input_text, nil, class: 'form-control' %>
    </div>
    <%= submit_tag 'Submit', class: 'btn btn-primary' %>
  <% end %>

  <%= @output_text %>
</div>